{
    "require": {
        "slim/slim": "^3.5",
        "slim/php-view": "^2.1",
        "monolog/monolog": "^1.21",
        "psr/log": "^1.0",
        "container-interop/container-interop": "^1.1",
        "danielstjules/stringy": "^2.3",
        "league/commonmark": "^0.15.0",
        "doctrine/orm": "^2.5",
        "nesbot/carbon": "^1.21",
        "slim/flash": "^0.1.0",
        "i-am-tom/schemer": "^2.0",
        "akrabat/rka-slim-session-middleware": "^2.0",
        "slim/csrf": "^0.7.0",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "behat/behat": "^3.2",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "phpunit/phpunit": "^5.6",
        "phpspec/prophecy": "^1.6",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Sihae\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sihae\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "composer test:unit ; composer test:acceptance",
        "test:acceptance": "behat --colors -v",
        "test:unit": "phpunit tests/Unit",
        "test:coverage": "phpunit tests/Unit --coverage-clover ./tests/_output/coverage.xml"
    }
}
