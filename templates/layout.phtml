    <?= $this->section('styles') ?>

    <link rel="stylesheet" href="<?= $this->asset('/css/sihae.css') ?> " />

    <title><?= $settings['title'] ?></title>
</head>
<body>
    <header>
        <h1><a href="/"><?= $settings['title'] ?></a></h1>

        <p><?= $settings['summary'] ?></p>
    </header>

    <main>
        <?= $this->section('content') ?>

        <?php if (!empty($flash_messages)) : ?>
            <script src="<?= $this->asset('/js/alert-alert.min.js') ?>"></script>

            <?php foreach ($flash_messages as $type => $messages) : ?>
                <script>
                    var type = '<?= $type ?>'
                    var message = '<?= implode(", ", $messages) ?>'

                    window.Alert.alert(type, message, { timeout: 5000 })
                </script>
            <?php endforeach ?>
        <?php endif ?>
    </main>

    <footer>
        <nav>
            <ul>
                <li><a <?= $this->uri('/about', 'class="selected"') ?> href="/about">About</a></li>
                <li><a <?= $this->uri('/archive', 'class="selected"') ?> href="/archive">Archive</a></li>

                <?php if (isset($user)) : ?>
                    <?php if ($user->getIsAdmin() === true) : ?>
                        <li><a <?= $this->uri('/new', 'class="selected"') ?> href="/new">Add a new post</a></li>
                    <?php endif ?>

                    <li><a href="/logout">Logout</a></li>
                <?php endif ?>
            </ul>
        </nav>
    </footer>
</body>
</html>
