<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="<?= $this->asset('/css/normalize.css') ?> " />

    <?php if (isset($user) && $user->getIsAdmin() === true) : ?>
