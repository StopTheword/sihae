<?php $this->layout('theme::layout') ?>

<h2>Archive</h2>

<?php if (empty($archiveData)) : ?>
    <h3>There aren't any posts!</h3>
<?php else : ?>
    <?php foreach ($archiveData as $date => $posts) : ?>
        <h3><?= $date ?></h3>

        <ol class="post-list archive">
            <?php foreach ($posts as $post) : ?>
                <?php $this->insert('theme::partials/post-list-post', ['post' => $post]) ?>
            <?php endforeach ?>
        </ol>
    <?php endforeach ?>
<?php endif ?>
